<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoAnimation" parent="AppTheme">
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleStyle</item>
    </style>


    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationView"/>

    <style name="BottomNavigationView.Item">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/menu_bar</item>
        <item name="android:src">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>



    <style name="HeaderStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/headerColor</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BodyStyle" parent="HeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BodyStyleNoBorder" parent="HeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

</resources>
